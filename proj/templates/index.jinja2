<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Interactive D3 Chart with Inputs</title>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <link rel="stylesheet" href="{{url_for('static', filename='main.css')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script defer src="{{url_for('static', filename='selectioncontrols.js')}}"></script>
    <script defer src="{{url_for('static', filename='chart.js')}}"></script>
</head>

<body>


    <div class="container" id="select-option-container">

        <label for="sitename-select">Site Name</label>
        <select name="sitename-select" id="sitename-select">
        </select>
        <br>
        <label for="bmp-select">BMP Name</label>
        <select name="bmp-select" id="bmp-select">
        </select>
        <br>
        <!-- Mashup Index Calculation Method Section -->
        <div class="mashup-index-method mt-3">
            <p>Select a Mashup Index calculation method:</p>
            <div class="d-flex align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="ahp" name="mashup-index-method" value="ahp"
                        checked>
                    <label class="form-check-label" for="ahp">AHP</label>
                </div>
                <div class="form-check ms-3">
                    <input class="form-check-input" type="radio" id="ranksum" name="mashup-index-method"
                        value="ranksum">
                    <label class="form-check-label" for="ranksum">Rank Sum</label>
                </div>
            </div>
        </div>

        <!-- Color Picker Section -->
        <div class="color-picker-container mt-3">
            <label for="color-picker">Choose a color for the graph dots:</label>
            <input type="color" id="color-picker" name="color-picker" value="#0000FF">
        </div>

        <!-- Updated analyte section -->
        <br><br>
        <div class="row">
            <div class="col col-4">
                <input type="checkbox" id="show-analytes" checked>
                <label for="show-analytes">Show/Hide list of analytes</label>
            </div>
            <div class="col col-4">
                <button class="btn btn-primary" id="add-data-button">Add data to chart</button>
            </div>
            <div class="col col-4">
                <button class="btn btn-primary" id="clear-chart-button">Clear chart</button>
            </div>
        </div>
        <br>
        <div id="analyte-container">
        </div>

    </div>


    <div class="container">
        <div id="chart">
        </div>
    </div>

    <br><br><br>

